{
  "name": "feriel-portfolio",
  "version": "1.0.0",
  "description": "Feriel's personal portfolio and 100 weeks tracker",
  "scripts": {
    "elm:build": "elm make elm-src/Main.elm --output=elm.js",
    "elm:build:optimize": "elm make elm-src/Main.elm --output=elm.js --optimize",
    "elm:build:debug": "elm make elm-src/Main.elm --output=elm.js --debug",
    "elm:watch": "chokidar \"elm-src/**/*.elm\" -c \"npm run elm:build:debug\"",
    "elm:dev": "elm reactor",
    "css:build": "tailwindcss -i src/input.css -o src/output.css",
    "css:watch": "tailwindcss -i src/input.css -o src/output.css --watch",
    "build": "npm run css:build && npm run elm:build",
    "build:prod": "npm run css:build && npm run elm:build:optimize",
    "dev": "concurrently \"npm run css:watch\" \"npm run elm:watch\" \"serve -s -l 8000\"",
    "serve": "serve -s -l 8000",
    "deploy": "npm run build:prod && echo 'Ready for GitHub Pages deployment!'"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.5",
    "tailwindcss": "^4.0.5",
    "serve": "^14.2.0"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/feriel/feriel.github.io.git"
  },
  "keywords": ["portfolio", "elm", "100weeks", "developer"],
  "author": "Feriel",
  "license": "MIT"
}
